{{define "title"}} Articles {{end}}
{{define "description"}} All articles from all time. {{end}}
{{define "content"}}

<h1>Articles</h1>

<p>All articles from all time:</p>

<div class="sitemap">
  <ul>
  {{range .}}
    <li>
      <span class="timestamp">{{.CreatedAtString}}</span>
      <a href="/articles/{{.UrlEncodedTitle}}">{{.Title}}</a>
    </li>
  {{end}}
  </ul>
</div>

{{end}}