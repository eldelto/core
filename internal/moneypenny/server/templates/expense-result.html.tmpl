{{define "content"}}
<button id="copy-button" onclick="copyAll()">
  KOPIEREN SIE ES
</button>

<table id="expenses">
  <thead>
	<td>Date</td>
	<td>Name</td>
	<td>Amount</td>
	<td>Details</td>
  </thead>
  <tbody>
	{{range .}}
	<tr>
	  <td>{{.Date}}</td>
	  <td>{{.PartnerName}}</td>
	  <td>{{.Amount}}</td>
	  <td>{{.Details}}</td>
	</tr>
	{{end}}
  </tbody>
</table>
{{end}}
