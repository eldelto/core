{{define "content"}}

<div class="recipe">
  <form class="form" method="POST" action="/recipes">
	<label for="title">Title:</label>
	<input type="text" id="title" name="title"></input>
	
	<span>
	<label for="portions">Portions:</label>
	<input type="number" id="portions" name="portions"></input>
	</span>

	<span>
	<label for="time">Time [minutes]:</label>
	<input type="number" id="time" name="time"></input>
	</span>
	
	<label for="ingredients">Ingredients:</label>
	<textarea id="ingredients" name="ingredients"></textarea>
	
	<label for="steps">Steps:</label>
	<textarea id="steps" name="steps"></textarea>
	
	<input class="primary" type="submit" value="Create"></input>
  </form>
</div>

{{end}}
